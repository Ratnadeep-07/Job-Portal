package master.servlet;

import java.io.IOException;
import javax.servlet.*;
import javax.servlet.http.*;
import master.dao.JobDao;
import master.dto.JobDto;

public class JobServlet extends HttpServlet {

 protected void doPost(HttpServletRequest req, HttpServletResponse res)
 throws ServletException, IOException {

 JobDto j = new JobDto();
 j.setJobid(req.getParameter("jobid"));
 j.setJobname(req.getParameter("jobname"));
 j.setJobtype(req.getParameter("jobtype"));
 j.setDomain(req.getParameter("domain"));
 j.setValidupto(req.getParameter("validupto"));
 j.setYrsexp(req.getParameter("yrsexp"));
 j.setCompanyid(req.getParameter("companyid"));

 JobDao dao = new JobDao();
 dao.addJob(j);

 res.sendRedirect("AdminMenu.jsp");
 }
}
